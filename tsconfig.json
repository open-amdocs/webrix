{
  "include": [
    "./src/**/*.js",
    "./src/**/*.jsx",
  ],
  "exclude": [
    "./src/utility/**/*",
    "./src/**/*.test.js",
  ],
  "compilerOptions": {
    "skipLibCheck": true,
    "allowJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "build",
    "isolatedModules": true
  }
}